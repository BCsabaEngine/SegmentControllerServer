{
  "name": "segmentcontrollerserver",
  "version": "1.0.0",
  "description": "",
  "author": "BalÃ¡zs Csaba (@bcsabaengine)",
  "license": "MIT",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "lint": "node_modules\\.bin\\eslint ./**/*.js",
    "pkg": "pkg .",
    "pkgzip": "pkg . --compress GZip",
    "pkgbro": "pkg . --compress Brotli"
  },
  "keywords": [
    "SegmentController"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@babel/eslint-parser",
    "plugins": [],
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": "latest"
    },
    "globals": {
      "__dirname": "readonly",
      "__filename": "readonly",
      "setImmediate": "readonly",
      "Buffer": "readonly",
      "cmdline": "readonly",
      "config": "readonly",
      "logger": "readonly",
      "rf24": "readonly",
      "segments": "readonly",
      "ws": "readonly",
      "layout": "readonly",
      "http": "readonly",
      "process": "readonly"
    },
    "rules": {
      "semi": [
        "warn",
        "never"
      ],
      "quotes": [
        "warn",
        "single"
      ],
      "no-extra-parens": "off",
      "no-unreachable-loop": "error",
      "no-case-declarations": "off",
      "block-scoped-var": "error",
      "class-methods-use-this": "error",
      "consistent-return": "error",
      "default-param-last": "error",
      "eqeqeq": "warn",
      "no-empty-function": "warn",
      "no-extra-bind": "warn",
      "no-new": "warn",
      "no-new-func": "warn",
      "no-new-wrappers": "warn",
      "no-self-compare": "warn",
      "radix": "warn",
      "camelcase": "warn",
      "no-new-object": "warn"
    }
  },
  "eslintIgnore": [
    "public",
    "views"
  ],
  "nodemonConfig": {
    "exec": "node index.js -d",
    "ignore": [
      "public/*"
    ],
    "delay": 1000
  },
  "pkg": {
    "scripts": "*.js",
    "assets": [
      "views/**/*",
      "public/**/*",
      "node_modules/canvas/build/Release/*.dll",
      "node_modules/platform-folders/build/Release/platformFolders.node",
      "node_modules/@serialport/bindings/build/Release/bindings.node"
    ],
    "targets": [
      "latest-win-x64"
    ],
    "outputPath": "../SegmentControllerServerDist"
  },
  "dependencies": {
    "@mgcrea/fastify-session": "^0.14.1",
    "bitset": "^5.1.1",
    "bootstrap": "^5.0.2",
    "bootstrap-icons": "^1.5.0",
    "canvas": "^2.8.0",
    "dayjs": "^1.10.6",
    "fastify": "^3.19.1",
    "fastify-compress": "^3.6.0",
    "fastify-cookie": "^5.3.1",
    "fastify-etag": "^2.1.0",
    "fastify-favicon": "^3.1.0",
    "fastify-formbody": "^5.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-route-group": "^1.0.1",
    "fastify-static": "^4.2.2",
    "fastify-websocket": "^3.2.0",
    "glob": "^7.1.7",
    "ini": "^2.0.0",
    "jquery": "^3.6.0",
    "merge-deep": "^3.0.3",
    "platform-folders": "^0.5.4",
    "point-of-view": "^4.15.1",
    "pug": "^3.0.2",
    "rf24meshserialnode": "^0.9.3",
    "winston": "^3.3.3",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/eslint-parser": "^7.14.7",
    "eslint": "^7.31.0"
  }
}
